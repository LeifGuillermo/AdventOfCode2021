<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green(%date{yyyy-MM-dd}) %red(%date{HH:mm:ss.SSS}) %boldCyan([%-5level]) %magenta([%thread]) %yellow(%logger) "%message"%n</pattern>
        </encoder>
    </appender>

    <logger name="com.guillermo.leif" level="DEBUG"/>
<!--    <logger name="org.springframework" level="TRACE"/>-->

    <root>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>